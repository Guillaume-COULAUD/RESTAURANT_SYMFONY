{% extends 'base.html.twig' %}

{% block title %}Afficher Catégories{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image </th>
                <th scope="col">Nom </th>
                <th scope="col">Nombre de plats </th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>  <img class="image_plat" src="{{category.Image}}" height="36"/></td>
                <td>  {{category.Name}} </td>
                <td>  {{category.Dish.count}} </td>
                <td>
                    <a href="{{ path('front_dishes__category', {'index': category.Id}) }}"> Voir les détails </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}