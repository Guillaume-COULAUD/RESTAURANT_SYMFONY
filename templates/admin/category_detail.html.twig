{% extends 'base.html.twig' %}

{% block title %}Detail cat√©gorie{% endblock %}

{% block body %}

 <table class="table">
        <thead>
            <tr>
                <th scope="col">Image </th>
                <th scope="col">Nom </th>
                <th scope="col">Plats </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>   <img height="36px" src="{{category.Image}}"/></td>
                <td>  {{category.name}} </td>
                <td>   
                {% for dish in category.Dish %}
                    {{dish.name}}
                {% endfor %} 
                </td>
                <td>  <a href="{{ path('modify_category', {'id': category.id}) }}"><button type="button" class="btn btn-primary">Modifier</button></a> </td>
                <td><a href="{{ path('delete_category', {'id': category.id}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>                </td>
            </tr>
        </tbody>

        <tr>
            <td>
                <a href="{{ path('front_dishes') }}"> Revenir aux categories </a>
            </td>
        </tr>
    </table>

{% endblock %}