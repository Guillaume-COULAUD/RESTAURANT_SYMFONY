{% extends "base.html.twig" %}

{% block body %}



<h1>{{ form_title }}</h1>
{{ form_start(form_dish) }}
    {{ form_row(form_dish.name) }}
    {{ form_row(form_dish.Calories, {'required': false}) }}
    {{ form_row(form_dish.price) }}
    {{ form_row(form_dish.Image, {'required': false}) }}
    {{ form_row(form_dish.Description) }}
    {{ form_row(form_dish.Sticky, {'required': false}) }}
    {{ form_row(form_dish.Category) }}
    {{ form_row(form_dish.User, {'required': false}) }}
    {{ form_row(form_dish.allergen , {'required': false}) }}
    <a href="{{ path('list_dish') }}">
        <input id="valider" type="submit" value="Valider">
    </a>
{{ form_end(form_dish) }}



<style> 
#valider{
    background-color: blue;
    color: white;
}

#btn_valider{
    width: 100vw;
    height: 5vh;
    display: flex;
    justify-content: space-around;
}

form{
    width: 100vw;
    height: 80vh;
}



#dish_form{
    width: 100vw;
    height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

label{
    margin-right: 0.5rem;
}

</style>
{% endblock %}